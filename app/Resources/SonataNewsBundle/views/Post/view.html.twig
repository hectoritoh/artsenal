 {% extends "AppShopThemeBundle::template.html.twig" %}




 {% block sonata_page_breadcrumb %}
 <div class="row-fluid clearfix">
    {{ sonata_block_render_event('breadcrumb', { 'context': 'news_post', 'post': post, 'current_uri': app.request.requestUri }) }}
</div>
{% endblock %}



{% block contenido %}






<div class="col-sm-2 col-lg-2 col-md-2"  >     
    {% include 'AppShopThemeBundle:Blocks:contenido.menu.html.twig'  %}
</div>


<div class="col-md-10"   >




    <div class="row">
        <div class="col-md-8 ">
            <div class="lato">
                <!-- <h2 class="lato" >Comprar</h2> -->
                <p  class="lead latto" style="color:#b4328c;"   style="font-size:25px;" >{{ post.title }}</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10 ">
            <div class="panel panel-default artsenal-panel "  style="padding-left: 20px; padding-right: 20px;padding-top:5px;" >
                <div class="panel-body">

                    <div class="container-fluid">


                        <div class="row">




                            <article class="sonata-blog-post-container">
                                <header>
                                    <div class="sonata-blog-post-date-container">
                                        <h5>
                                            <i class="icon-calendar"></i>
                                            {{ post.publicationDateStart | format_date }}
                                        </h5>
                                    </div>

                                    <h1 class="sonata-blog-post-title">
                                        

                                    </h1>

                                     
                                </header>

                                <div class="sonata-blog-post-content">
                                    {% media post.image, 'wide' %}
                                    {{ post.content|raw }}
                                </div>

 
                           
 
                        </article>


                    </div>




                </div>
            </div>
        </div>

    </div>
</div>


</div>






{% endblock %}
