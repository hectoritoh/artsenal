{% extends "AppShopThemeBundle::template.artsenal.html.twig" %}




{% block contenido %}

<div class="barra_spacer_3"></div>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="page-header pagina_header">
      <h2>
        Todas las compras
      </h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default artsenal-panel ">
      <div class="panel-body">

        <div class="container-fluid">


          <div class="row">

            <div  class="col-md-12 " >


              {% for venta in ventas %}


              <div class="row lista_compra">


               

                <div  class="col-md-4 " >                  
                  <p  class="text_lista_compras" >{{  venta.detalles | length  }}</p>
                </div>    

                <div  class="col-md-4 " >
                  <p class="titulo_lista_compras" >Fecha</p>
                  <p  class="text_lista_compras" >{{  venta.createdAt | date('Y:m:d H:i:s')  }}</p>
                </div>
 
                <div  class="col-md-4 " >
                  <p  class="titulo_lista_compras" >Total</p>
                  <p  class="text_lista_compras" >${{  venta.total  }}</p>
                </div>
 

                <div  class="col-md-4 " >
                  <p class="titulo_lista_compras" >Estado</p>
                  {% if venta.estado == 0  %}
                  <p class="text_lista_compras" >Requiere pago</p>
                  {% endif %}
                  {% if venta.estado == 1  %}
                  <p class="text_lista_compras" >En Proceso</p>
                  {% endif %}



                </div>



              </div>

  <hr>

              {% endfor %}


            </div>


          </div>

        </div>
      </div>
    </div>

  </div>
</div>



{% endblock %}