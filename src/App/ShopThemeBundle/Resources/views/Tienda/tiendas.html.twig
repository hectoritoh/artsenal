{% extends "AppShopThemeBundle::template.html.twig" %}

 

{% block contenido %}






<div class="col-sm-2 col-lg-2 col-md-2" style="background-color:white;"  >

	{{ render(controller('AppShopThemeBundle:Default:getCategorias')) }}

	{{ render(controller('AppShopThemeBundle:Default:getPublicidadBlock')) }}


</div>




<div class="col-md-10" style=" border-left: 1px solid  #eeeeee;padding-left:45px;background-color:rgb(235,235,235);"  >



 





	<div class="row">
		<div class="col-sm-12 col-lg-12 col-md-12  ">

			{% block titulo_contenido %}
			<h3 class="latto">Directorio de Tiendas</h3>    
			{% endblock %}

		</div>
	</div>

<div class="row">

		{% for tienda in tiendas %}

	

		<div class="col-sm-11 col-lg-11 col-md-11 tienda_block " >

			
			<div class="row   ">
					<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" style="padding-left: 0px;" >
						<div class="panel-body panel-imagen-container" 
						style="background-image:url({%  path tienda.imagenCabecera , 'banner' %}); margin:0px;" >					
					</div>
				</div>

				<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
					<br>
					<br>
					<p  style="font-weight:bold;" class="aquamarina"  >{{  tienda.titulo }}</p>

					<p  style="font-weight:normal;color:#666666;"   >{{  tienda.mensaje }}</p>
				</div>
			</div>



	</div>

<br>
<br>
<br>

	{% endfor %}

</div>

 

</div>


{% endblock %}



{% block modal %}





<div id="modalProducto" class="modal fade">




</div><!-- /.modal -->


{% endblock %}