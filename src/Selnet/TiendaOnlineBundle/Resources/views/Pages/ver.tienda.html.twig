{% extends "SelnetTiendaOnlineBundle::template.html.twig" %}



{% block contenido %}

<div class="container">
	<div class="row">

		<div  id="left_content" class="same-col-1 col-md-2">

			<div class="barra_spacer_2"></div>
			<div class="page-header pagina_header">
				<h2>Secciones de Tienda</h2>
			</div>
			<div class="barra_border"></div>

			<ul  class="lista_secciones" >
				
				{% for seccion , cantidad in secciones %}

				<li  class="texto_aquamarina" > 
					<a class="texto_aquamarina" href="">
						{{ seccion }} <span  class="texto_gris_oscuro" >({{ cantidad }})</span>
					</a> 
				</li>

				{% endfor %}
			</ul>

			<div class="barra_spacer_2"></div>
			<div class="page-header pagina_header">
				<h2>Dueno de la tienda</h2>
			</div>
			<div class="barra_border"></div>
			<div>
				{{ app.user.username }}
			</div>

			{% if modo_editar %}
			<ul  class="lista_secciones" >
				<li  class="texto_aquamarina" > 
					<a class="texto_aquamarina" href="">
						Agrega ubicacion
					</a> 
				</li>
			</ul>
			{% endif %}




			<div class="barra_spacer_2"></div>
			<div class="page-header pagina_header">
				<h2>informacion de la tienda</h2>
			</div>
			<div class="barra_border"></div>


			<ul  class="lista_secciones" >
				<li  class="texto_aquamarina" > 
					<a class="texto_aquamarina" href="">
						{{tienda.nombre}}
					</a> 
					<p class="texto_gris_oscuro" >Desde {{  tienda.createdAt | date('Y/m/d') }}</p>
				</li>
				<li  class="texto_aquamarina" > 
					<a class="texto_aquamarina" href="">
						Politicas
					</a> 
				</li>
				 


			</ul>

		</div>



		<div id="content" class=" same-col-1 col-md-10">
			<div class="row">
				
				<div class="col-md-9 col-md-offset-1">
					
					<div class="barra_spacer_3"></div>
					<div class="barra_spacer_2"></div>

					<div class="panel panel-default panel-imagen-cabecera">
						<div class="panel-inner-border">
							
							<div class="panel-body panel-imagen-container" 
							style="background-image:url({{  asset(  'uploads/imagen_tienda/' ~ tienda.imagenCabecera   ) }})" >
							<p  style="text-align:center;" >

							</p>
						</div>
					</div>
				</div>
				<div class="panel panel-default panel-nombre-tienda">

					<div class="panel-body ">
						<p  class="texto_aquamarina" style="margin-bottom: 0px;" >
							{{tienda.nombre}}
						</p>
						<p  class="texto_gris_oscuro" >
							1 Visitas - 1 favorito 
						</p>
					</div>						
				</div>
				<div class="panel panel-default panel-anuncio-tienda">

					<div class="panel-body ">
						<p  class="texto_gris_oscuro" style="font-weight:bold;margin-bottom: 0px;color:7c7c7c;" >
							{{tienda.anuncio}}
						</p>

					</div>						
				</div>




				<div class="barra_spacer_2"></div>
				<div class="page-header pagina_header">
					<h2>Articulos destacados de {{  tienda.nombre }}</h2>
				</div>

				<div id="productos" class="productos">

					{% for row in productos| batch(4) %}

					<div class="row" style="padding-top:20px;">

						{% for producto in row %}

						<div class="col-md-3"   style="padding-left: 5px; padding-right: 5px;" >
							{% include 'SelnetTiendaOnlineBundle:Blocks:producto.preview.html.twig' with {'producto':  producto  } %}
						</div>

						{% endfor %}

					</div>

					{% endfor %}

				</div>

			</div>




		</div>

	</div>




</div>
</div>



{% endblock %}