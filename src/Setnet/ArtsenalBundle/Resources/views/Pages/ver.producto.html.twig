<div  class="container-narrow" style="width: 100%;margin: 0 auto ; text-align: center;border-top: 8px solid #cc3399;overflow: hidden;padding:15px" >
    <div class="container-fluid"  >
        <div  class="row-fluid" >        

            <h3 class="text-left" style="padding-left:10px;font-weight:normal;"   >{{ producto.titulo }}</h3>

        </div>
        <div  class="row-fluid" >     

            <div id="myCarousel2" class="carousel slide art-fondo-trama"  style="padding:10px;"    >
                <div class="carousel-inner">
                    {%   for imagen in producto.imagenes %}
                    <div class="item  {% if loop.first %}active{% endif %}">
                        <img style="width: 450px;height:350px;" alt="imagen1" src="{{ asset('uploads/productos/'  ~  imagen.url   ) }}" />
                    </div>
                    {%   endfor  %}
                </div>
                <!-- Carousel nav -->
                <a class="carousel-control left" href="#myCarousel2" data-slide="prev">&lsaquo;</a>
                <a class="carousel-control right" href="#myCarousel2" data-slide="next">&rsaquo;</a>
            </div>
        </div>
        <div  class="row-fluid" >        

            <p  class="text-left"  style="padding:10px;"   >
                {{ producto.descripcion }}
            </p>                      

        </div>



        <div  class="row-fluid" style="background-color: rgb(255,253, 229);border:1px solid rgb(242, 238, 195);" >        



            <div class="span12" style="padding: 10px;" >          

               <div  class="row-fluid" >                
                   <div  class="span5 " > 
                    <p  style="text-align: left;color: #138889;font-weight: bold;margin:0px;" >nombre de la tienda</p>
                    <p  style="text-align: left;padding:0px;" >Visitas {{ producto.visitas }} - Favoritos {{ producto.favorito }}</p>                        
                </div>                    
                <div  class="span5  " >
                    <p  style="margin:0px;" >Disponibles {{ producto.cantidad }}</p> 
                </div>
                <div  class="span2" >
                    <p  style="color:black;margin:0px;font-size: 24px;" >${{  producto.precio }}</p> 
                </div>                   
            </div>

            <div  class="row-fluid" >                
                <div  class="span7  pull-right" > 

                    <input type="submit"  onclick="addCart('{{  path("agregar_item", {id_producto: producto.id}) }}' )" value="Agregar a Carrito" class="art-submit-grande" style="width:245px;" />
                </div>                    
                <div id="favorito_btn"   class="span3   pull-right" >
             
                </div>
            </div>                

        </div>

    </div>

</div>
</div>    


<script>
    
    $(document).ready(function(){
        $("#favorito_btn").load("{{  path('get_favorito_btn' , {id_producto: producto.id }) }}"); 
    }); 

</script>

