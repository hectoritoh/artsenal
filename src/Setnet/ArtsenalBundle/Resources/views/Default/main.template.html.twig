  <div class="container-fluid">
      <div class="row-fluid">
        
        <div class="span2  top-spacing ">
          <div class="sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header  jm-categoria_titulo ">Categorias</li>


            {% for item in categorias %}
              <li  class="jm-categoria-item"  ><a href="{{ path('categoria_producto',{ categoria : item.id }) }}"    >{{  item.nombre   }}</a></li>
            {% endfor %}
            </ul>
          </div><!--/.well -->
        </div><!--/span-->

        <div class="span7 top-spacing ">

          <div id="myCarousel" class="carousel slide"  style='border:solid 5px black;width: 760px;' >
