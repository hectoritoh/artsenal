                                        {{ form_widget(formTienda) }}
                                        <input type="submit" />
                                    </form>


                                </div>
                            </div>


                            <div class="row-fluid">
                                <div id="articulosForm" class="tabForm span12"  style="display:none;"  >


                                    <fieldset>
                                        <legend></legend>
                                        <form  id="formProducto" action="{{ path('setnet_artsenal_nuevo_imagen') }}" method="post" {{ form_enctype(formProductoImagen1) }}>
                                                {{ form_widget(formProductoImagen1) }}
                                                <input type="submit" />
                                            </form>
                                        <form  id="formProducto" action="{{ path('setnet_artsenal_nuevo_imagen') }}" method="post" {{ form_enctype(formProductoImagen1) }}>
                                                {{ form_widget(formProductoImagen2) }}
                                                <input type="submit" />
                                            </form>
                                        <form  id="formProducto" action="{{ path('setnet_artsenal_nuevo_imagen') }}" method="post" {{ form_enctype(formProductoImagen1) }}>
                                                {{ form_widget(formProductoImagen3) }}
                                                <input type="submit" />
                                            </form>
                                        <form  id="formProducto" action="{{ path('setnet_artsenal_nuevo_imagen') }}" method="post" {{ form_enctype(formProductoImagen1) }}>
                                                {{ form_widget(formProductoImagen4) }}
                                                <input type="submit" />
                                            </form>
                                        <form  id="formProducto" action="{{ path('setnet_artsenal_nuevo_imagen') }}" method="post" {{ form_enctype(formProductoImagen1) }}>
                                                {{ form_widget(formProductoImagen5) }}
                                                <input type="submit" />
                                            </form>
                                        </fieldset>

                                    <fieldset>
                                        <legend></legend>
                                        <form  id="formProducto" action="{{ path('setnet_artsenal_nuevo_producto') }}" method="post" {{ form_enctype(formProducto) }}>
                                                {{ form_widget(formProducto) }}
                                                <input type="submit" />
                                            </form>
                                        </fieldset>
                                    </div>
                                </div>


                                <div class="row-fluid">
                                    <div id="facturacionForm" class="tabForm span12"  style="display:none;"  >
                                        contenido 3
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div id="endForm" class="tabForm span12"  style="display:none;"  >
                                        contenido 4
                                    </div>
                                </div>
                            </div>






                        </div>


                        <script src="{{ asset('js/jquery.js') }}"></script>
                        <script src="{{ asset('js/jquery.jBreadCrumb.js') }}"></script>              
                        <script src="{{ asset('js/jquery.form.js') }}"></script>                                                      
                        <script src="{{ asset('js/bootstrap.js') }}"></script>

                        <script type="text/javascript" >


                            // pre-submit callback 
                            function showRequest(formData, jqForm, options) {

                                return true;
                            }

                            // post-submit callback 
                            function showResponse(responseText, statusText, xhr, $form) {


                                if (responseText)
                                    $("#articulosLink").trigger("click");


                            }



                            $(document).ready(
                                    function() {


                                        jQuery("#breadCrumb").jBreadCrumb();


                                        ///// paneles dinamicos por clic en breadcumb
                                        $(".showForm").each(function() {

                                            $(this).click(function() {

                                                $(".tabForm").each(function() {
                                                    $(this).hide()
                                                });

                                                $($(this).attr('href')).show();

                                            });

                                        });



                                        var options = {
                                            beforeSubmit: showRequest, // pre-submit callback 
                                            success: showResponse  // post-submit callback 

                                        };


                                        $('#formTienda').ajaxForm(options);


                                    });



                            </script>


                            </body>
                            </html>



