<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Artsenal{% endblock %}</title>
        {% include 'SetnetArtsenalBundle:Templates:css.html.twig' %}
        {% include 'SetnetArtsenalBundle:Templates:js.html.twig' %}
    </head>
    <body>
        <div  class="container-fluid"   >

        {% block navigation %} 
        {% render( controller('SetnetArtsenalBundle:Usuario:menu' ) ) %}
        {% endblock %}

        {% block submenu %}
        {% render( controller('SetnetArtsenalBundle:Usuario:submenu' ) ) %}
        {% endblock %}



            <div class="row-fluid">

                <div class="span2  ">

{% block left_contenido %} 
                    <div  class="contenido-wrapper" >
                        <div class="sidebar-nav">
                            <ul class="nav nav-list">
                                <li class="nav-header  jm-categoria_titulo ">Categorias</li>
            {% for item in categorias %}
                                    <li  class="jm-categoria-item"  >
                                        <a href="{{ path('categoria_producto',{ categoria : item.id }) }}" >{{  item.nombre   }}</a>
                                    </li>
            {% endfor %}
                                </ul>
                            </div> 
                        </div> 
 {%   endblock %}
                    </div><!--/span-->

                    <div class="span10  art-fondo-trama">




              {% block contenido %} 

                        <div  class="contenido-wrapper " >

                            <div  class="row-fluid" >

                                <div class="span10" >






                                    <div id="myCarousel" class="carousel slide"  style='border:solid 5px black;' >
                                        <!-- Carousel items -->
                                        <div class="carousel-inner">

            {% for item in slider %}

                                            <div class="item  {% if loop.first %}active{% endif %}">
                                                <img style="height:220px;width: 100%;" alt="imagen1" src="{{ asset('uploads/banners/'  ~ item.imagenUrl  ) }}" />
                                            </div>

           {% endfor %}


                                        </div>
                                        <ol class="carousel-indicators">
                                            <li data-target="#myCarousel" data-slide-to="0" class="active">
                                            </li>
                                            <li data-target="#myCarousel" data-slide-to="1">
                                            </li>
                                            <li data-target="#myCarousel" data-slide-to="2">
                                            </li>
                                        </ol>
                                        <!-- Carousel nav -->
                                        <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                                        <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
                                    </div>


                                    <h2 class="jm_lastest_titulo" style="margin-bottom: 5px;" >Ultimas Artesanias</h2>
                                    <div     >


                                        <div class="row-fluid ">

                    {% include 'SetnetArtsenalBundle:Producto:producto.html.twig' %}


                    {% include 'SetnetArtsenalBundle:Producto:producto.html.twig' %}


                    {% include 'SetnetArtsenalBundle:Producto:producto.html.twig' %}


                    {% include 'SetnetArtsenalBundle:Producto:producto.html.twig' %}

                                        </div>

                                        <div class="row-fluid jm-producto-spacing">

                    {% include 'SetnetArtsenalBundle:Producto:producto.html.twig' %}


                    {% include 'SetnetArtsenalBundle:Producto:producto.html.twig' %}


                    {% include 'SetnetArtsenalBundle:Producto:producto.html.twig' %}


                    {% include 'SetnetArtsenalBundle:Producto:producto.html.twig' %}

                                        </div>

                                        <div class="row-fluid jm-producto-spacing">

                    {% include 'SetnetArtsenalBundle:Producto:producto.html.twig' %}


                    {% include 'SetnetArtsenalBundle:Producto:producto.html.twig' %}


                    {% include 'SetnetArtsenalBundle:Producto:producto.html.twig' %}


                    {% include 'SetnetArtsenalBundle:Producto:producto.html.twig' %}

                                        </div>
                                    </div> 
                                </div>
                            </div>

                        </div>

             {% endblock %}
                    </div><!--/row-->




                </div>



        {% block footer %}
        {% include 'SetnetArtsenalBundle:Templates:template.footer.html.twig' %}
        {% endblock %}

            </div>





        </body>
    </html>



