<div id="tiendasSlider" class="carousel slide"  style='border:solid 5px #cccccc;' >
    <!-- Carousel items -->
    <div class="carousel-inner">

        {% for item in tiendas %}

        <div class="item  {% if loop.first %}active{% endif %}">
            <a href="{{  path('ver_tienda',{id_tienda: item.id }) }}">
                <img style="width: 100%;height:230px;" alt="imagen1" src="{{ asset('uploads/tiendas/'  ~ item.imagenCabecera  ) }}" />
            </a>
        </div>

        {% endfor %}


    </div>
    <ol class="carousel-indicators">
        <li data-target="#tiendasSlider" data-slide-to="0" class="active">
        </li>
        <li data-target="#tiendasSlider" data-slide-to="1">
        </li>
        <li data-target="#tiendasSlider" data-slide-to="2">
        </li>
    </ol>
    <!-- Carousel nav -->
    <a class="carousel-control left" href="#tiendasSlider" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#tiendasSlider" data-slide="next">&rsaquo;</a>
</div>