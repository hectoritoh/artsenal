 



<div class="container-fluid"  >

    <p class="lead"  style="font-family: lato_light;" >Perfil de {{ perfil.nombre  }}</p>
    <div class="row-fluid">



        <div>
            <div class="row-fluid">
                <div  class="tabForm span12"  >

                    <div class="art-form-holder2" style="margin-bottom:0px;"  >

                        <p class="lead"  style="font-family: lato_light;" >Acerca de mi</p>            
                        <p class=""  style="font-family: lato_light;" >{{  perfil.about }}</p>

                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        {% if perfil.sexo == 'h' %}
                        <p class=""  style="font-family: lato_light;" >Hombre</p>
                        {% else %}
                        <p class=""  style="font-family: lato_light;" >Mujer</p>
                        {% endif %}
                        
                        <p class=""  style="font-family: lato_light;" >{{  perfil.nacimiento | date('Y/m/d') }}</p>
                        <p class=""  style="font-family: lato_light;" >Miembro desde {{  perfil.nacimiento | date('Y/m/d') }}</p>

                        <br/>
                        <br/>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div  class="tabForm span12" >

                    <div class="art-form-holder2"  style="border-top-width:0px;" >

                       <p class=""  style="font-family: lato_light;color:black;font-weight:bold;" >Articulos favoritos</p>
                       
                       <div class="row-fluid">
                           

                        
                        <div  id="productos" >

                            {% for producto in productosFavoritos %}
                            
                            {% if loop.index0 is divisibleby(4) %}
                        </div>
                        <div  class="row-fluid jm-producto-spacing fill"  >                            
                            {% endif %}
                            {% include 'SetnetArtsenalBundle:Block:producto.html.twig' with {   'prod' : producto } %}
                            {% if loop.last %}
                        </div>
                        {% endif %}

                        {% endfor %}


                    </div> 


                    

                </div>
                
            </div>
        </div>
    </div>
</div> 
</div>
</div> 