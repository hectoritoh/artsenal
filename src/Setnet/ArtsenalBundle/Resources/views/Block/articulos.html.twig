

{%   for prod in productos  %}


<div class="span3 jm-producto-holder" >
    <a  href="{{  path('mostrar_articulo' , {'id_articulo':  prod.id }) }}"  >
        <p>
            <img style="width: 100%;height:200px;" src="{{ asset('uploads/productos/'  ~ prod.imagenes[0].url  ) }}" />
        </p>
        <div  class="jm-producto-info"  >
            <p class="jm-producto-titulo" >{{  prod.titulo }}</p>
            <div>
                <p class="jm-tienda_artista" >Cantidad: {{ prod.cantidad}}</p>
                <p class="jm-tienda_artista" >Precio: ${{ prod.precio}}</p>
            </div>
        </div>
    </a>
</div>


{%   endfor %}